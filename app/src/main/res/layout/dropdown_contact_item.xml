<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="@dimen/space_s"
    android:paddingStart="@dimen/space_s"
    >

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="@dimen/image_xxs"
        android:layout_height="@dimen/image_xxs"
        android:src="@drawable/vector2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"/>

    <TextView
        android:id="@+id/menuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Item"
        android:layout_marginStart="@dimen/space_xxs"
        android:textColor="@color/hook_blue"
        android:textSize="@dimen/text_size_h5"
        app:layout_constraintStart_toEndOf="@id/menuIcon"
        app:layout_constraintTop_toTopOf="@id/menuIcon"
        app:layout_constraintBottom_toBottomOf="@id/menuIcon"
      />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider_grey"
        app:layout_constraintTop_toBottomOf="@id/menuIcon"
        android:layout_marginTop="@dimen/space_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/menuText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/space_m"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
