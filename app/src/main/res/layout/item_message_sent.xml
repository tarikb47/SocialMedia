<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:gravity="end">

    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarik ovdje"
        android:layout_marginStart="@dimen/space_s"
        android:textColor="@color/black"
        android:padding="8dp"
        android:background="@color/message_sent_bg"
        android:layout_marginBottom="@dimen/space_xxxs" />

    <TextView
        android:id="@+id/messageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18:23"
        android:layout_marginStart="@dimen/space_s"
        android:textSize="@dimen/text_size_body_3"
        android:textColor="@color/black" />
</LinearLayout>
